# Blackbox configuration for endpoint monitoring
modules:
  # HTTP checks for web services
  http_2xx:
    prober: http
    timeout: 5s
    http:
      valid_http_versions: ["HTTP/1.1", "HTTP/2"]
      valid_status_codes: []  # Defaults to 2xx
      method: GET
      headers:
        Accept: "*/*"
        User-Agent: "blackbox/1.0"

  # HTTPS checks for secure web services
  http_200:
    prober: http
    timeout: 5s
    http:
      valid_http_versions: ["HTTP/1.1", "HTTP/2"]
      valid_status_codes: [200]
      method: GET
      headers:
        Accept: "*/*"
        User-Agent: "blackbox/1.0"

  # ICMP ping checks
  icmp:
    prober: icmp
    timeout: 5s
    icmp:
      preferred_ip_protocol: "ip4"

  # TCP connection checks
  tcp_connect:
    prober: tcp
    timeout: 5s

  # DNS resolution checks
  dns:
    prober: dns
    timeout: 5s
    dns:
      transport_protocol: "tcp"
      preferred_ip_protocol: "ip4"
      query_name: "www.google.com"
      query_type: "A"
      valid_rcodes: ["NOERROR"]
